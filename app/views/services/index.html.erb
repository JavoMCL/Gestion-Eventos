<div class="container mt-4">
  <h1 class="mb-4">Lista de servicios</h1>

  <%= link_to 'Agregar Servicio', new_service_path, class: 'btn btn-primary mb-3' %>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Categoria</th>
      <th>Descripcion</th>
      <th>Costo base</th>
      <th>Activo</th>
      <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.category %></td>
        <td><%= service.description %></td>
        <td><%= service.base_amount %></td>
        <td><%= service.active %></td>
        <td>
          <%= link_to 'Editar', edit_service_path(service), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Eliminar', service_path(service),
                      data: { turbo_method: :delete, turbo_confirm: 'Â¿Seguro que deseas eliminar este servicio?' },
                      class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>