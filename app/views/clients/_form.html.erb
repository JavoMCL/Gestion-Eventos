<%= form_with(model: @client, local: true, class: "needs-validation") do |form| %>
<% if @client.errors.any? %>
<div class="alert alert-danger">
    <h4>Errores encontrados:</h4>
    <ul>
        <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="mb-3">
    <%= form.label :name, "Nombre", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
</div>

<div class="mb-3">
    <%= form.label :client_type, "Tipo", class: "form-label" %>
    <%= form.select :client_type, ['Individual', 'Empresa'], {}, class: "form-select" %>
</div>

<div class="mb-3">
    <%= form.label :phone_number, "Teléfono", class: "form-label" %>
    <%= form.text_field :phone_number, class: "form-control" %>
</div>

<div class="mb-3">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
</div>

<div class="mb-3">
    <%= form.label :address, "Dirección", class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
</div>

  <%= form.submit @client.new_record? ? 'Agregar' : 'Editar', class: "btn btn-success" %>

<%= link_to 'Cancelar', clients_path, class: "btn btn-secondary" %>
<% end %>
