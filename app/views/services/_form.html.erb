<%= form_with(model: @service, local: true, class: "needs-validation") do |form| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errores encontrados:</h4>
      <ul>
        <% @service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "Nombre", class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :category, "Categoría", class: "form-label" %>
    <%= form.select :category,
                    ["Catering", "Sonido", "Iluminación", "Decoración", "Logística"],
                    { prompt: "Seleccione una categoría" },
                    { class: "form-select", required: true } %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Descripcion", class: "form-label" %>
    <%= form.text_field :description, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :base_amount, "Costo base (Gs)", class: "form-label" %>
    <%= form.number_field :base_amount, step: "0.01", class: "form-control" %>
  </div>

  <div class="form-check mb-3">
    <%= form.check_box :active, class: "form-check-input" %>
    <%= form.label :active, "Activo", class: "form-check-label" %>
  </div>

  <%= form.submit @service.new_record? ? 'Agregar' : 'Editar', class: "btn btn-success" %>

  <%= link_to 'Cancelar', services_path, class: "btn btn-secondary" %>
<% end %>
