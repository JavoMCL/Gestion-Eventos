<div class="container mt-4">
  <h1 class="mb-4">Lista de clientes</h1>

  <%= link_to 'Agregar Cliente', new_client_path, class: 'btn btn-primary mb-3' %>

  <div class="mb-3 d-flex justify-content-end">
    <%= form_with url: clients_path, method: :get, local: true, class: "d-flex" do %>
      <%= text_field_tag :search, params[:search], class: "form-control me-2", placeholder: "Buscar..." %>
      <%= submit_tag "Buscar", class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th>Dirección</th>
      <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.client_type %></td>
        <td><%= client.phone_number %></td>
        <td><%= client.email %></td>
        <td><%= client.address %></td>
        <td>
          <%= link_to 'Editar', edit_client_path(client), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Eliminar', client_path(client),
                      data: { turbo_method: :delete, turbo_confirm: '¿Seguro que deseas eliminar este cliente?' },
                      class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="mt-3">
    <div class="d-flex justify-content-between align-items-center">
      <small class="text-muted">
        Mostrando <%= @clients.offset_value + 1 %> - <%= @clients.offset_value + @clients.length %>
        de <%= @clients.total_count %> artículo<%= @clients.total_count != 1 ? 's' : '' %>
        <% if params[:search].present? %>
          (resultados de búsqueda)
        <% end %>
      </small>
      <%= paginate @clients, params: { search: params[:search] } %>
    </div>
  </div>
</div>




