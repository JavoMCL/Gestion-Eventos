<div class="container mt-4">
  <h1 class="mb-4">Lista de clientes</h1>

  <%= link_to 'Agregar Evento', new_event_path, class: 'btn btn-primary mb-3' %>

  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <table class="table table-bordered table-striped">
    <thead class="table-dark">
    <tr>
      <th>Nombre</th>
      <th>Cliente</th>
      <th>Tipo de evento</th>
      <th>Fecha de inicio</th>
      <th>Fecha de finalizacion</th>
      <th>Lugar</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    <% @events.each do |event| %>
      <tr class="text-capitalize">
        <td><%= event.name %></td>
        <td><%= event.client&.name %></td>
        <td><%= event.event_type %></td>
        <td><%= event.start_date.strftime("%d/%m/%Y") %></td>
        <td><%= event.end_date.strftime("%d/%m/%Y") %></td>
        <td><%= event.address %></td>
        <td><%= event.state %></td>
        <td>
          <%= link_to 'Editar', edit_event_path(event), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Eliminar', event_path(event),
                      data: { turbo_method: :delete, turbo_confirm: 'Â¿Seguro que deseas eliminar este evento?' },
                      class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

